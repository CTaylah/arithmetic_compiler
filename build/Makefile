# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_x64
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x64)
  cpplox_config = debug_x64

else ifeq ($(config),release_x64)
  cpplox_config = release_x64

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := cpplox

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

cpplox:
ifneq (,$(cpplox_config))
	@echo "==== Building cpplox ($(cpplox_config)) ===="
	@${MAKE} --no-print-directory -C build/cpplox -f Makefile config=$(cpplox_config)
endif

clean:
	@${MAKE} --no-print-directory -C build/cpplox -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x64"
	@echo "  release_x64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   cpplox"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"